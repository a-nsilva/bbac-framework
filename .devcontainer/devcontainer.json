{
    "name": "BBAC ROS Development",
    "image": "osrf/ros:humble-desktop-full",
    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.11"
        },
        "ghcr.io/devcontainers/features/git:1": {}
    },
    "postCreateCommand": "pip install pandas scikit-learn tensorflow matplotlib plotly streamlit jupyter networkx scipy",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.pylint",
                "ms-vscode.cpptools",
                "ms-iot.vscode-ros"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/bin/python3"
            }
        }
    },
    "forwardPorts": [8501, 8888, 8080],
    "remoteUser": "root"
}
